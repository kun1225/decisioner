{
  "name": "@repo/database",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./*": "./src/*.ts"
  },
  "scripts": {
    "db:generate": "node --import tsx ./node_modules/drizzle-kit/bin.cjs generate --config=drizzle.config.ts",
    "db:migrate": "node --import tsx ./node_modules/drizzle-kit/bin.cjs migrate --config=drizzle.config.ts",
    "db:studio": "node --import tsx ./node_modules/drizzle-kit/bin.cjs studio --config=drizzle.config.ts",
    "lint": "eslint .",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
